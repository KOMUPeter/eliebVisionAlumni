{# templates/user/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Members List{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="my-4">Members List</h1>
        <p><a class="nav-link" href="{{ path('myAccount') }}">My Account</a></p>
    </div>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered w-75">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                {% for membersList in membersLists %}
                    <tr>
                        <td>{{ membersList.firstName }}</td>
                        <td>{{ membersList.lastName }}</td>
                        <td>{{ membersList.phoneNumber }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
